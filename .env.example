# ===========================================
# ONE-API Environment Configuration
# ===========================================

# Application
PORT=3000
GIN_MODE=release
TZ=Asia/Ho_Chi_Minh

# Session (REQUIRED - Generate with: openssl rand -hex 32)
SESSION_SECRET=your-secret-key-here-change-in-production

# ===========================================
# Database Configuration
# ===========================================
# MySQL DSN format: user:password@tcp(host:port)/database
SQL_DSN=oneapi:your-password@tcp(db:3306)/one-api
MYSQL_ROOT_PASSWORD=your-root-password
MYSQL_USER=oneapi
MYSQL_PASSWORD=your-password
MYSQL_DATABASE=one-api

# Connection Pool
SQL_MAX_IDLE_CONNS=100
SQL_MAX_OPEN_CONNS=1000
SQL_CONN_MAX_LIFETIME=60

# Separate Log Database (optional)
# LOG_SQL_DSN=

# ===========================================
# Redis Configuration
# ===========================================
REDIS_CONN_STRING=redis://redis:6379
REDIS_PASSWORD=

# Redis Sentinel (optional)
# REDIS_MASTER_NAME=

# ===========================================
# Cache Configuration
# ===========================================
MEMORY_CACHE_ENABLED=true

# ===========================================
# Multi-Node Deployment
# ===========================================
# NODE_TYPE=master
# SYNC_FREQUENCY=60
# FRONTEND_BASE_URL=

# ===========================================
# Rate Limiting
# ===========================================
# GLOBAL_API_RATE_LIMIT=180
# GLOBAL_WEB_RATE_LIMIT=60

# ===========================================
# Proxy Configuration (optional)
# ===========================================
# HTTP_PROXY=
# HTTPS_PROXY=

# ===========================================
# Theme Configuration
# ===========================================
# THEME=default

# ===========================================
# Docker Registry
# ===========================================
REGISTRY=docker.io
VERSION=latest

# ===========================================
# Debug Configuration
# ===========================================
# DEBUG=false
# DEBUG_SQL=false

# ===========================================
# Batch Update Configuration
# ===========================================
# BATCH_UPDATE_ENABLED=false
# BATCH_UPDATE_INTERVAL=5

# ===========================================
# Metrics Configuration
# ===========================================
# ENABLE_METRIC=false
# METRIC_QUEUE_SIZE=10
# METRIC_SUCCESS_RATE_THRESHOLD=0.8

# ===========================================
# Initial Setup (optional)
# ===========================================
# INITIAL_ROOT_TOKEN=
# INITIAL_ROOT_ACCESS_TOKEN=

# ===========================================
# External APIs Configuration
# ===========================================
# RELAY_TIMEOUT=0
# RELAY_PROXY=
# GEMINI_VERSION=v1
# GEMINI_SAFETY_SETTING=BLOCK_NONE

# ===========================================
# Channel Configuration
# ===========================================
# CHANNEL_UPDATE_FREQUENCY=
# CHANNEL_TEST_FREQUENCY=
# POLLING_INTERVAL=